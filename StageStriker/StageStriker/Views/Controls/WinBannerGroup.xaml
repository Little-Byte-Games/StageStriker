<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StageStriker.Views.Controls.WinBannerGroup">
    <ContentView.Content>
        <Grid RowSpacing="8" Margin="0, 16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="winbanner_silver.png" Grid.Row="0" x:Name="Banner1" IsVisible="False"/>
            <Image Source="winbanner_silver.png" Grid.Row="1" x:Name="Banner2" IsVisible="False"/>
        </Grid>
    </ContentView.Content>
</ContentView>